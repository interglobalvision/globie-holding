html, body 
    width: 100%
    height: 100%
    background: #A79AB5
    
a:link, a:visited
    color: rgb(0,0,0)
    
a:focus
    outline: none

svg 
    position: absolute
    top: 50%
    left: 50%
    margin-left: -250px
    margin-top: -250px
    z-index: 1

#skin
    transition: fill .5s

.globieParts 
    cursor: pointer
    
.blush
    fill: #f00
    
.contact
    position:absolute
    right:30px
    bottom:30px
    z-index: 1
    .icon-mail 
        font-size: 40px
        padding: 0px
    a:link
        transition: color .2s
    a:hover
        color: #FFDFDD
        
#canvas
    position: absolute
    left: 50%
    bottom: 50%
    margin-left: -150px
    z-index: 0
    pointer-events: none
