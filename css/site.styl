@import normalize
@import icons
@import main

html, body
    width: 100%
    height: 100%
    background: white

a:link, a:visited
    color: rgb(0,0,0)

a:focus
    outline: none

#logotype
  position: fixed
  bottom: 10px
  right: 0px
  width: 100%

#logo
  width: 100%
  height: 30px
  transform: rotate(1deg)

#webcam
  position: absolute
  top: 50%
  left: 50%
  margin-left: -333px
  margin-top: -290px
  z-index: 1
  -webkit-clip-path: ellipse(200px 200px)
  
#globie, #legs
    position: absolute
    top: 50%
    left: 50%
    margin-left: -250px
    margin-top: -250px
    
#globie
  z-index: 10
    
#legs
  z-index: 0

#contact
    position:absolute
    right:30px
    bottom:30px
    z-index: 1
    transform: rotate(2deg)
    a:link
        transition: color .5s
    a:hover
        color: #FFDFDD

#envelope
    width: 40px
    height: 40px
    padding: 0px
    path
      transition: fill 0.2s
    &:hover
      path
        fill: #FAAFBE

#canvas
    position: absolute
    left: 50%
    bottom: 50%
    margin-left: -250px
    z-index: 0
    pointer-events: none
