html, body 
    width: 100%
    height: 100%
    background: #A79AB5
    
a:link, a:visited
    color: rgb(0,0,0)
    
main 
    width: 500px
    height: 600px
    position: absolute
    top: 50%
    left: 50%
    margin-left: -250px
    margin-top: -300px

svg 
    position: relative
    top: 50%
    left: 50%
    margin-left: -250px

#skin
    transition: fill .5s

.globieParts 
    cursor: pointer
    
.blush
    fill: #f00
    
footer
    display: block
    position: relative
    text-align: center
    margin: 20px 0;
    .fa 
        font-size: 40px
        margin: 10px 5px
        padding: 4px
    .fa-envelope
        transform: scale(.9)
    a:link
        transition: color .2s
    a:hover
        color: #FFDFDD
