@import normalize
@import icons
@import main

html, body
    width: 100%
    height: 100%
    background: white

a:link, a:visited
    color: rgb(0,0,0)

a:focus
    outline: none

#logotype
  position: fixed
  bottom: 10px
  right: 0px
  width: 100%

#logo
  width: 100%
  height: 30px
  transform: rotate(1deg)

svg
    position: absolute
    top: 50%
    left: 50%
    margin-left: -250px
    margin-top: -250px
    z-index: 1

#skin
    transition: fill .5s

.globieParts
    cursor: pointer

.blush
    fill: #f00

#contact
    position:absolute
    right:30px
    bottom:30px
    z-index: 1
    transform: rotate(2deg)
    a:link
        transition: color .2s
    a:hover
        color: #FFDFDD

.icon-mail
    font-size: 40px
    padding: 0px

#canvas
    position: absolute
    left: 50%
    bottom: 50%
    margin-left: -150px
    z-index: 0
    pointer-events: none
